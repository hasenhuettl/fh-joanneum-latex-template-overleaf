{
  "version": "0.1.0",
  "command": "lualatex",
  "isShellCommand": true,
  "args": [
    "-interaction=nonstopmode",
    "-file-line-error",
    "masterthesis.tex"
  ],
  "showOutput": "silent",
  "problemMatcher": {
    "owner": "latex-preview",
    "fileLocation": [
      "relative",
      "${workspaceRoot}"
    ],
    "pattern": {
      "regexp": "^(.*):(\\d+):\\s+(.*)$",
      "file": 1,
      "line": 2,
      "message": 3
    }
  }
}